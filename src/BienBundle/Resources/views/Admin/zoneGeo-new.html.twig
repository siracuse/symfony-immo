{% extends "//layoutAdmin.html.twig" %}
{% block header %}
    {{ parent() }} - Zone Géographique
{% endblock %}
{% block title %}
    <h5>Autres > <a href="{{ path('admin-zone-geo-view') }}"> Zone Géographique </a> > Ajouter</h5>
{% endblock %}
{% block body %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header"><strong>Ajout </strong> d'une Zone Géographique
                        </div>
                        <div class="card-body card-block">
                            <div class="form-group">
                                {{ form_start(form) }}
                                {{ form_label(form.nomZone) }}
                                {{ form_widget(form.nomZone, {'attr': {'autofocus': 'autofocus'}}) }}
                                {{ form_errors(form.nomZone) }}<br>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


