{% extends "//layoutAdmin.html.twig" %}

{%  block header %}
    {{ parent() }} - Adresse
{% endblock %}

{% block title %}
    <h5> Localisation > <a href="/agence/web/app_dev.php/admin/adresse/view">  Adresse </a> > Ajout</h5>
{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 col-md-offset-2">
                <br>
                <h2 class="text-center"> Ajout d'une Adresse : </h2>
                <hr>
                <br>
                {{ form_start(form) }}

                {{ form_row(form.bpAdresse) }}
                {{ form_row(form.rueAdresse) }}
                {{ form_row(form.nomVille) }}
                {{ form_row(form.cpVille) }}
                <br>
                {{ form_row(form.zoneGeo) }}
                {{ form_row(form.Valider, {'attr': {'class' : 'btn btn-primary'} }) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {{ form(form) }}
{% endblock %}