{% extends "//layoutAdmin.html.twig" %}

{% block header %}
    {{ parent() }} - Agents
{% endblock %}

{% block title %}
    <h5> L'entreprise > Les Agents </h5>
{% endblock %}

{% block body %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    {% for message in app.flashes('ajout') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('modif') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('suppression') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    <div class="card">
                        <div class="card-header">
                            <div class="col-md-1"></div>
                            <div class="col-md-10"><h2 class="text-center"> Les Agents</h2></div>
                            <div class="col-md-1 text-right">
                                <a href="{{ path('admin-agent-new') }}">
                                    <i class="menu-icon fa fa-plus SHbtAdd" style="margin-top: 10px;"></i>
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="bootstrap-data-table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Photo</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Prénom</th>
                                        <th scope="col">Téléphone</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if agents == null %}
                                        <tr>
                                            <td colspan="5" class="text-center"><i> vide </i></td>
                                        </tr>
                                    {% else %}
                                        {% for agent in agents %}
                                            <tr>
                                                <td>
                                                    <a href="/agence/web/app_dev.php/admin/agent/fiche/{{ agent.id }}">
                                                        <div class="SHimgAgent img-responsive"
                                                             style="background-image:url('{{ asset('uploads/agents/'~ agent.photoAgent ~'') }}') ">
                                                        </div>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/agence/web/app_dev.php/admin/agent/fiche/{{ agent.id }}">{{ agent.nomAgent }}</a>
                                                </td>
                                                <td>
                                                    <a href="/agence/web/app_dev.php/admin/agent/fiche/{{ agent.id }}">{{ agent.prenomAgent }}</a>
                                                </td>
                                                <td>{{ agent.telAgent }}</td>
                                                <td>
                                                    <a href="/agence/web/app_dev.php/admin/agent/edit/{{ agent.id }}"
                                                       style="margin-right: 10%;">
                                                        <i class="menu-icon fa fa-edit"></i>
                                                    </a>
                                                    <a data-href="/agence/web/app_dev.php/admin/agent/delete/{{ agent.id }}"
                                                       data-toggle="modal" data-target="#confirm-delete">
                                                        <i class="menu-icon fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}