{% extends "//layoutAdmin.html.twig" %}
{% block header %}
    {{ parent() }} - Utilisateurs
{% endblock %}
{% block title %}
    <h5> Les Utilisateurs </h5>
{% endblock %}
{% block button %}
    <div class="col-md-1 center-block">
        <a href="/agence/web/app_dev.php/admin/utilisateur/new"
           class="btn btn-primary" role="button">Ajouter un Utilisateur</a>
    </div>
{% endblock %}
{% block body %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    {% for message in app.flashes('ajout') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('modif') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('suppression') %}
                        <div class="alert alert-success alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endfor %}
                    <div class="card">
                        <div class="card-header">
                            <h2 class="text-center">Les Utilisateurs</h2>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th scope="col">Nom / Prénom</th>
                                        <th scope="col">Téléphone</th>
                                        <th scope="col">Adresse</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for utilisateur in utilisateurs %}
                                        <tr>
                                            <td>
                                                {% if utilisateur.nomUser != null %}
                                                    <a href="/agence/web/app_dev.php/admin/utilisateur/fiche/{{ utilisateur.id }}">
                                                        {{ utilisateur.nomUser }} {{ utilisateur.prenomUser }}
                                                    </a>
                                                {% else %}
                                                    <i> Pas de Nom et Prénom renseignés</i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if utilisateur.telUser != null %}
                                                    {{ utilisateur.telUser }}
                                                {% else %}
                                                    <i> Pas de numéro renseigné</i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if   utilisateur.adresse != null %}
                                                    {{ utilisateur.adresse.bpAdresse }} {{ utilisateur.adresse.rueAdresse }}
                                                    {{ utilisateur.adresse.cpVille }} {{ utilisateur.adresse.nomVille }}
                                                {% else %}
                                                    <i> Pas d'adresse renseignée </i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="/agence/web/app_dev.php/admin/utilisateur/edit/{{ utilisateur.id }}"
                                                   style="margin-right: 10%;">
                                                    <i class="menu-icon fa fa-edit"></i>
                                                </a>
                                                <a data-href="/agence/web/app_dev.php/admin/utilisateur/delete/{{ utilisateur.id }}"
                                                   data-toggle="modal" data-target="#confirm-delete">
                                                    <i class="menu-icon fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



